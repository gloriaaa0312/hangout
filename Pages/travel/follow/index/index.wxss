.tab-bar{
    width:100%;
    position: fixed;
    bottom:20px;
    left:50px;
    display: flex;
    padding-bottom: env(safe-area-inset-bottom);
}
  
.tab-bar-item{
    width: 20%;
    padding: 0;
    padding-left: 1%;
    margin: 0;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    height: 30%;
}

.default{
    color: #7B8B6F;
}

.tab-bar-item cover-image {
    width: 30px;
    height: 30px;
}

.tab-bar-item text {
    font-size: 13px;
}

